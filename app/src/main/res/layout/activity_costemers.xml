<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Costemers"
    android:background="@color/material_dynamic_neutral20">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_primary70"
        android:text="Müşteriler Sayfasına Giriş Yaptınız"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="584dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="259dp"
        android:layout_height="265dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/customers" />

    <Button
        android:id="@+id/btn_animals"
        android:layout_width="175dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:background="@color/material_dynamic_neutral_variant70"
        android:onClick="animals"
        android:text="Hayvanlar"
        android:textColor="@color/material_dynamic_neutral95"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btn_animals3"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="20dp"
        android:background="@color/material_dynamic_neutral_variant70"
        android:onClick="baits"
        android:text="Yemler"
        android:textColor="@color/material_dynamic_neutral95"
        android:textColorLink="@color/white"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btn_animals2"
        android:layout_width="176dp"
        android:layout_height="49dp"
        android:layout_marginTop="152dp"
        android:background="@color/material_dynamic_neutral_variant70"
        android:text="Barınaklar"
        android:textColor="@color/material_dynamic_neutral95"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

</androidx.constraintlayout.widget.ConstraintLayout>